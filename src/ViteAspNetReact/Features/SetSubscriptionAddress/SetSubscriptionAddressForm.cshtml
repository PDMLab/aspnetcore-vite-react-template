@model ViteAspNetReact.Features.SetSubscriptionAddress.SetSubscriptionAddressModel

@* Layout link
  https://tailwindui.com/components/application-ui/page-examples/settings-screens#component-5357b57a5c14addf36e64050366465d4
 *@

@{
  Layout = null;
}

<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9"
     id="subscriptionform">
<section aria-labelledby="payment-details-heading">
  <form hx-put="@Url.Action("SetSubscriptionAddress", "SetSubscriptionAddress")"
        hx-target="#subscriptionform">
    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="bg-white py-6 px-4 sm:p-6">
        <div>
          <h2 class="text-lg leading-6 font-medium text-blue-900"
              id="payment-details-heading">
            Rechnungsadresse
          </h2>
          @* <p class="mt-1 text-sm text-blue-500">Update your billing information. Please note that updating your location could affect your tax rates.</p> *@
        </div>

        <div class="mt-6 grid grid-cols-4 gap-6">
          <div class="col-span-4 sm:col-span-2">
            <label asp-for="CompanyName"
                   class="block text-sm text-gray-900">
            </label>
            <input asp-for="CompanyName"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-2">
            <label asp-for="CompanyNameAddendum"
                   class="block text-sm text-gray-900">
            </label>
            <input asp-for="CompanyNameAddendum"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-2">
            <label asp-for="AddressLine1"
                   class="block text-sm text-gray-900">
            </label>
            <input asp-for="AddressLine1"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-2">
            <label asp-for="AddressLine2"
                   class="block text-sm text-gray-900">
            </label>
            <input asp-for="AddressLine2"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-1">
            <label asp-for="ZipCode"
                   class="block text-sm text-gray-900">
            </label>
            <input asp-for="ZipCode"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-1">
            <label asp-for="City"
                   class="flex items-center text-sm text-gray-900">
            </label>
            <input asp-for="City"
                   class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   type="text">
          </div>

          <div class="col-span-4 sm:col-span-2">
            <label class="block text-sm text-gray-900"
                   for="country">
              Land
            </label>
            <select autocomplete="country-name"
                    class="mt-1 block w-full bg-white px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                    id="country"
                    name="country">
              <option>Deutschland</option>
            </select>
          </div>


        </div>
      </div>
      <div class="bg-white px-4 sm:p-6">
        <div asp-validation-summary="All">
        </div>
      </div>
      <div class="px-4 py-3 bg-blue-50 text-right sm:px-6">
        <button class="inline-flex justify-center px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md shadow-sm bg-blue-500 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
                type="submit">
          Speichern
        </button>
      </div>
    </div>
  </form>
</section>

<!-- Plan -->
<section aria-labelledby="plan-heading">
  <form action="#"
        method="POST">
    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
        <div>
          <h2 class="text-lg leading-6 font-medium text-blue-900"
              id="plan-heading">
            Plan
          </h2>
        </div>

        <fieldset>
          <legend class="sr-only">Pricing plans</legend>
          <div class="relative bg-white rounded-md -space-y-px">
            <!-- Checked: "bg-orange-50 border-orange-200 z-10", Not Checked: "border-blue-200" -->
            <label class="rounded-tl-md rounded-tr-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-3 focus:outline-none">
              <span class="flex items-center text-sm">
                <input aria-describedby="pricing-plans-0-description-0 pricing-plans-0-description-1"
                       aria-labelledby="pricing-plans-0-label"
                       class="h-4 w-4 text-orange-500 border-blue-300 focus:ring-blue-900"
                       name="pricing-plan"
                       type="radio"
                       value="Startup">
                <span class="ml-3 font-medium text-blue-900"
                      id="pricing-plans-0-label">
                  Startup
                </span>
              </span>
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-center"
                    id="pricing-plans-0-description-0">
                <!-- Checked: "text-orange-900", Not Checked: "text-blue-900" -->
                <span class="font-medium">$29 / mo</span>
                <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
                <span>($290 / yr)</span>
              </span>
              <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right"
                    id="pricing-plans-0-description-1">
                Up to 5 active job postings
              </span>
            </label>

            <!-- Checked: "bg-orange-50 border-orange-200 z-10", Not Checked: "border-blue-200" -->
            <label class="relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-3 focus:outline-none">
              <span class="flex items-center text-sm">
                <input aria-describedby="pricing-plans-1-description-0 pricing-plans-1-description-1"
                       aria-labelledby="pricing-plans-1-label"
                       class="h-4 w-4 text-orange-500 border-blue-300 focus:ring-blue-900"
                       name="pricing-plan"
                       type="radio"
                       value="Business">
                <span class="ml-3 font-medium text-blue-900"
                      id="pricing-plans-1-label">
                  Business
                </span>
              </span>
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-center"
                    id="pricing-plans-1-description-0">
                <!-- Checked: "text-orange-900", Not Checked: "text-blue-900" -->
                <span class="font-medium">$99 / mo</span>
                <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
                <span>($990 / yr)</span>
              </span>
              <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right"
                    id="pricing-plans-1-description-1">
                Up to 25 active job postings
              </span>
            </label>

            <!-- Checked: "bg-orange-50 border-orange-200 z-10", Not Checked: "border-blue-200" -->
            <label class="rounded-bl-md rounded-br-md relative border p-4 flex flex-col cursor-pointer md:pl-4 md:pr-6 md:grid md:grid-cols-3 focus:outline-none">
              <span class="flex items-center text-sm">
                <input aria-describedby="pricing-plans-2-description-0 pricing-plans-2-description-1"
                       aria-labelledby="pricing-plans-2-label"
                       class="h-4 w-4 text-orange-500 border-blue-300 focus:ring-blue-900"
                       name="pricing-plan"
                       type="radio"
                       value="Enterprise">
                <span class="ml-3 font-medium text-blue-900"
                      id="pricing-plans-2-label">
                  Enterprise
                </span>
              </span>
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-center"
                    id="pricing-plans-2-description-0">
                <!-- Checked: "text-orange-900", Not Checked: "text-blue-900" -->
                <span class="font-medium">$249 / mo</span>
                <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
                <span>($2490 / yr)</span>
              </span>
              <!-- Checked: "text-orange-700", Not Checked: "text-blue-500" -->
              <span class="ml-6 pl-1 text-sm md:ml-0 md:pl-0 md:text-right"
                    id="pricing-plans-2-description-1">
                Unlimited active job postings
              </span>
            </label>
          </div>
        </fieldset>

        <div class="flex items-center">
          <!-- Enabled: "bg-orange-500", Not Enabled: "bg-blue-200" -->
          @* ReSharper disable once Html.AttributeValueNotResolved *@
          <button aria-checked="true"
                  aria-labelledby="annual-billing-label"
                  class="bg-blue-200 relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-900 transition-colors ease-in-out duration-200"
                  role="switch"
                  type="button">
            <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
            <span aria-hidden="true"
                  class="translate-x-0 inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200">
            </span>
          </button>
          <span class="ml-3"
                id="annual-billing-label">
            <span class="text-sm font-medium text-blue-900">Annual billing </span>
            <span class="text-sm text-blue-500">(Save 10%)</span>
          </span>
        </div>
      </div>
      <div class="px-4 py-3 bg-blue-50 text-right sm:px-6">
        <button class="bg-blue-800 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-900"
                type="submit">
          Save
        </button>
      </div>
    </div>
  </form>
</section>

<!-- Billing history -->
<section aria-labelledby="billing-history-heading">
  <div class="bg-white pt-6 shadow sm:rounded-md sm:overflow-hidden">
    <div class="px-4 sm:px-6">
      <h2 class="text-lg leading-6 font-medium text-blue-900"
          id="billing-history-heading">
        Billing history
      </h2>
    </div>
    <div class="mt-6 flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="overflow-hidden border-t border-blue-200">
            <table class="min-w-full divide-y divide-blue-200">
              <thead class="bg-blue-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-blue-500 uppercase tracking-wider"
                    scope="col">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-blue-500 uppercase tracking-wider"
                    scope="col">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-blue-500 uppercase tracking-wider"
                    scope="col">
                  Amount
                </th>
                <!--
                `relative` is added here due to a weird bug in Safari that causes `sr-only` headings to introduce overflow on the body on mobile.
                -->
                <th class="relative px-6 py-3 text-left text-xs font-medium text-blue-500 uppercase tracking-wider"
                    scope="col">
                  <span class="sr-only">View receipt</span>
                </th>
              </tr>
              </thead>
              <tbody class="bg-white divide-y divide-blue-200">
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-900">
                  <time datetime="2020-01-01">1/1/2020</time>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-500">Business Plan - Annual Billing</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-500">CA$109.00</td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a class="text-orange-600 hover:text-orange-900"
                     href="#">
                    View receipt
                  </a>
                </td>
              </tr>

              <!-- More payments... -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
