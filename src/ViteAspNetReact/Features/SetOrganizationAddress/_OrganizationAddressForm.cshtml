@model ViteAspNetReact.Features.SetOrganizationAddress.SetOrgAddress

@* Layout link
  https://tailwindui.com/components/application-ui/page-examples/settings-screens#component-5357b57a5c14addf36e64050366465d4
 *@

@{
  Layout = null;
}

<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9"
     id="addressform">
  <section aria-labelledby="payment-details-heading">
    <form hx-put="@Url.Action("SetOrganizationAddress", "SetOrganizationAddress")"
          hx-target="#addressform">
      <div class="shadow sm:rounded-md sm:overflow-hidden">
        <div class="bg-white py-6 px-4 sm:p-6">
          <div>
            <h2 class="text-lg leading-6 font-medium text-blue-900"
                id="payment-details-heading">
              Unternehmen
            </h2>
            @* <p class="mt-1 text-sm text-blue-500">Update your billing information. Please note that updating your location could affect your tax rates.</p> *@
          </div>

          <div class="mt-6 grid grid-cols-4 gap-6">
            <div class="col-span-4 sm:col-span-2">
              <label asp-for="CompanyName"
                     class="block text-sm text-gray-900">
              </label>
              <input asp-for="CompanyName"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-2">
              <label asp-for="CompanyNameAddendum"
                     class="block text-sm text-gray-900">
              </label>
              <input asp-for="CompanyNameAddendum"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-2">
              <label asp-for="AddressLine1"
                     class="block text-sm text-gray-900">
              </label>
              <input asp-for="AddressLine1"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-2">
              <label asp-for="AddressLine2"
                     class="block text-sm text-gray-900">
              </label>
              <input asp-for="AddressLine2"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-1">
              <label asp-for="ZipCode"
                     class="block text-sm text-gray-900">
              </label>
              <input asp-for="ZipCode"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-1">
              <label asp-for="City"
                     class="flex items-center text-sm text-gray-900">
              </label>
              <input asp-for="City"
                     class="mt-1 block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                     type="text">
            </div>

            <div class="col-span-4 sm:col-span-2">
              <label class="block text-sm text-gray-900"
                     for="country">
                Land
              </label>
              <select autocomplete="country-name"
                      class="mt-1 block w-full bg-white px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                      id="country"
                      name="country">
                <option>Deutschland</option>
              </select>
            </div>


          </div>
        </div>
        <div class="bg-white px-4 sm:p-6">
          <div asp-validation-summary="All">
          </div>
        </div>
        <div class="px-4 py-3 bg-blue-50 text-right sm:px-6">
          <button class="inline-flex justify-center px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md shadow-sm bg-blue-500 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
                  type="submit">
            Speichern
          </button>
        </div>
      </div>
    </form>
  </section>
</div>
